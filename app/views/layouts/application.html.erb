<!DOCTYPE html>
<html>
  <head>
    <title>Capture</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>


    <link href="https://fonts.googleapis.com/css2?family=Rock+Salt&display=swap" rel="stylesheet">

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
  </head>

  <body>
    <%= render 'shared/flashes' %>

    <% if @landing_page_navbar %>
      <%= render 'shared/navbar-landing-page' %>
      <%= yield %>
    <% else %>

    <div class="display-flex-container">

      <div class="sidebar-rest">
        <%= render 'shared/sidebar-rest', folders: @folders %> <!-- this is comming from the application controller (set_folder method) -->
      </div>

      <div class="whole-container-right-of-sidebar">
        <%= render 'shared/title-and-user-bar' %> <!-- this should only be rendered on index, notification, search and folder pages -->

        <div class="d-flex">
          <div class="center-content">
            <%= yield %>
          </div>

          <div class="friends-bar"> <!-- this should only be on the sources index page make an if else statement with flex grow the center will then take up the won space-->
            <h1>this is where the friends are going to go</h1>
          </div>
        </div>
      </div>

    </div>

    <% end %>




  </body>
</html>
