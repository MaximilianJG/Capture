<%= link_to comment_path(id: comment.id) do %>
    <h2><%= comment.content %></h2>
<% end %>

<%= link_to "Delete this Comment",
    comment_path(comment),
    method: :delete %>

  <%= comment.likes_count %>


  <% if current_user&.likes&.where(comment_id: comment.id)&.any? %>
    <%= link_to like_path(comment), method: :delete do %>
      <i class="fas fa-heart"></i>
    <% end %>
  <% else %>
    <%= link_to likes_path(comment), method: :create do %>
      <i class="far fa-heart"></i>
    <% end %>
  <% end %>
