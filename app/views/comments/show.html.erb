<%= @comment.quote.content %>
<%= @comment.content %>

<% @comment.comments.each do |comment| %>
    <%= comment.content %>
<% end %>

<%= form_for(@new_comment) do |f| %>
  <%= f.label "Comment:" %>
  <%= f.text_field :content %>
  <%= f.hidden_field :comment_id, :value => @comment.id %>
  <%= f.hidden_field :quote_id, :value => @comment.quote.id %>
  <%= f.submit %>
<% end %>
