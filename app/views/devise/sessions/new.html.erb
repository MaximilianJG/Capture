<div style="background-color: #1E202C; height: 100vh; z-index: -1; position: absolute; top: 0; left: 0; ">
    <%= cl_image_tag "crowd_z9xbj9", class: "background-image-class" %>
</div>

<div class="devise-div">
  <h2 class="devise-title">Log in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs input-title">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions action-btn">
      <%= f.button :submit, "Log in" %>
    </div>
  <% end %>

  <div class="mt-3">
    <%= render "devise/shared/links" %>
  </div>
</div>

