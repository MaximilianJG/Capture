<!-- When search is filled -->
<% if !@results.nil? %>

  <% if @sources.size > 0 %>
    <div class="searched-captures">
        <div class="title-and-see-all">
          <p class="title">Captures</p>
          <p class="see-all">See all</p>
        </div>


        <div class="row">
          <% @sources.take(3).each do |source| %>
            <div class="col-4">
              <div class="source">
                <%= link_to source_path(source) do %>

                  <div class="image">
                    <% if source.photo.attached? %>
                      <%= cl_image_tag source.photo.key, class: "global-search-source-banner dropdown-toggle" %>
                    <% else %>
                      <%= cl_image_tag "newspapers-stack-1to2_svlmsn", class: "global-search-source-banner dropdown-toggle" %>
                    <% end %>
                  </div>

                  <div class="description">
                    <div class="title">
                      <p><%= source.title %></p>
                    </div>
                  </div>

                <% end %>

              </div>
            </div>
          <% end %>
        </div>
    </div>
  <% end %>

  <% if @searched_folders.size > 0 %>
    <div class="searched-folders">
        <div class="title-and-see-all">
          <p class="title">Folders</p>
          <p class="see-all">See all</p>
        </div>
        <div class="row">
          <% @searched_folders.take(3).each do |folder| %>
            <div class="col-4">
              <div class="folder">
                <%= link_to folder_path(folder) do  %>
                  <div class="image">
                    <% if (folder.sources.size > 0) && (folder.sources.first.photo.attached?) %>
                      <%= cl_image_tag folder.sources.first.photo.key, class: "global-search-source-banner dropdown-toggle" %>
                    <% else %>
                      <%= cl_image_tag "newspapers-stack-1to2_svlmsn", class: "global-search-source-banner dropdown-toggle" %>
                    <% end %>
                  </div>

                  <div class="description">
                    <div class="title">
                      <p><i class="far fa-folder"></i><%= folder.folder_name %></p>
                    </div>
                  </div>
                <% end %>

              </div>
            </div>
          <% end %>
        </div>
    </div>
  <% end %>

  <% if @users.size > 0 %>
    <div class="searched-users">

        <div class="title-and-see-all">
          <p class="title">Users</p>
          <p class="see-all">See all</p>
        </div>

        <div class="row">
          <% @users.take(6).each do |user| %>
            <div class="col-4">
              <%= link_to user_profile_overview_path(user) do  %>

                <div class="user">
                  <div class="image">
                    <% if user.photo.attached? %>
                      <%= cl_image_tag user.photo.key, class: "global-search-source-banner dropdown-toggle" %>
                    <% else %>
                      <%= cl_image_tag "newspapers-stack-1to2_svlmsn", class: "global-search-source-banner dropdown-toggle" %>
                    <% end %>
                  </div>

                  <div class="description">
                    <div class="title">
                      <p class="username"><%= user.username %></p>
                      <p class="followers"><%= user.followers.count %> Followers</p>
                    </div>
                  </div>
                </div>
              <% end %>

            </div>
          <% end %>
        </div>
    </div>
  <% end %>

<!-- When Search is empty -->
<% else %>
  <%= @ja %>


<% end %>
