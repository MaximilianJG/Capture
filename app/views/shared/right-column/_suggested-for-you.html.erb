<div class="component-div">
  <h4 class="component-header">Suggested for you</h4>

  <div class="suggested-for-you">
    <% @suggested_users.take(3).each do |user| %>

    <div class="user">
      <% if user.photo.attached? %>
        <%= cl_image_tag user.photo.key , class: "avatar"%>
      <% else %>
        <%= cl_image_tag "eksq10s38n804m87862dj6qqhjqq", class: "avatar" %>
      <% end %>

      <div>
        <p class="name"><%= user.username %></p>
        <p class="tags">#tech, #economi...</p>

        <%= link_to create_relationship_path(user, current_user), method: :create, class: "follow-btn" do %>
          <span class="follow-text"><i class="fas fa-plus"></i> Follow </span>
        <% end %>
      </div>
    </div>
    <% end %>

    <span class=""><%= link_to "See all Suggestions...", "#", class: "see-all-suggestions" %></span>
  </div>
</div>
