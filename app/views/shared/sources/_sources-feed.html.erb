<div class="">
  <% @sources.each do |source| %>
    <div class="source-and-quote-cards">
    <div class="source-card">
      <div class="d-flex">

        <div class="">
          <% if source.photo.attached? %>
            <%= cl_image_tag source.photo.key, class: "source-photo" %>
          <% else %>
            <%= cl_image_tag "b08hxPY_jhyrxg", class: "source-photo" %>
          <% end %>
        </div>

        <div class="">
          <!-- Source Card Title -->
          <%= link_to source_path(source),class: "remove-underline m-0" do %>
            <p class="source-card-title"><strong><%= source.title %></strong></p>
          <% end %>

          <!-- Source Card Citation -->
          <p class="info-subtitle"><%= link_to "#{source.website.gsub("www.", "")}", "#{source.url_of_website}"%> · by <%= link_to "Tara McKelvey Sterling", "#"  %>, Virginia, ·  September 22, 2020</p>

          <!-- Source Owner -->
          <div class="d-flex source-owner">
            <div>
              <% if source.user.photo.attached? %>
                <%= cl_image_tag current_user.photo.key, class: "profile-avatar" %>
              <% else %>
                <%= cl_image_tag "b08hxPY_jhyrxg", class: "profile-avatar" %>
              <% end %>
            </div>

            <div>
              <p class="username"> <%= source.user.username %> </p>
              <p class="time-ago"> <%= time_ago_in_words(source.created_at).gsub('about','').gsub("less than a", "1").gsub(" minutes", "m").gsub(" hours", "h") %> ago </p>

            </div>
          </div>
        </div>

      </div>
    </div>


      <div class="feed-quote-card">

        <div></div>
        <div></div>
        <div></div>
        <div></div>

      </div>

    </div>
  <% end %>
</div>

